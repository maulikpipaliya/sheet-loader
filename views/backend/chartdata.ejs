<%- include header.ejs %>

        <%- include sidebar.ejs %>

        <div class="rightpart">

            <div class="log-wrightdashboard">
                <div class="col-lg-12 tophead">
                    <h1>Chart Data </h1>
                    <div class="info">
                        <h4>Welcome <label><%= username %></label></h4>
                        <a href="/adminiku/logout">Logout</a>
                    </div>
                </div>
            </div>

            <div class="bodycontent">
                <div class="col-lg-12">
                  <h3>Count Upload Data per Date</h3>
                  <div class="chart-container" style="position: relative; height:40vh; width:80vw">
                      <canvas id="myChart"></canvas>
                  </div>

                </div>
            </div>

        </div>

        <script src="/js/jquery.min.js"></script>
        <script src="/js/backendscript.js"></script>
        <script src="/js/addscript.js"></script>

        <script src="/js/Chart.min.js"></script>
        <script>
          var chrt = document.getElementById("myChart").getContext("2d");

          function beforePrintHandler () {
              for (var id in Chart.instances) {
                  Chart.instances[id].resize();
              }
          }


          var myChart = new Chart(chrt, {
              type: 'line',
              data: {
                  labels: <%- JSON.stringify(chartlabel) %>,
                  datasets: [{
                      label: '# of Votes',
                      data: [ <%= chartdata %> ],
                      backgroundColor: [
                          'rgba(255, 99, 132, 0.2)',
                          'rgba(54, 162, 235, 0.2)',
                          'rgba(255, 206, 86, 0.2)',
                          'rgba(75, 192, 192, 0.2)',
                          'rgba(153, 102, 255, 0.2)',
                          'rgba(255, 159, 64, 0.2)'
                      ],
                      borderColor: [
                          'rgba(255, 99, 132, 1)',
                          'rgba(54, 162, 235, 1)',
                          'rgba(255, 206, 86, 1)',
                          'rgba(75, 192, 192, 1)',
                          'rgba(153, 102, 255, 1)',
                          'rgba(255, 159, 64, 1)'
                      ],
                      borderWidth: 1
                  }]
              },
              options: {
                  scales: {
                      yAxes: [{
                          ticks: {
                              beginAtZero: true
                          }
                      }]
                  }
              }
          });
      </script>
      
    </body>
</html>